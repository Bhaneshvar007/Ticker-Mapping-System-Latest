


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <div class="col-md-12 p-0">
        <ul class="nav d-flex">
            <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0);">
                    Tradewise Matching Log Report
                </a>
            </li>
        </ul>
        <hr class="m-0">
    </div>

    <article class="col-md-12">
        <div class="pt-3">

            <div class="row" style="margin-top:1%; width:100%;overflow-x:hidden">


                <div class="col-md-2">
                    <label for="accountname">Account</label>
                    <select class="form-control" name="accountname" id="accountname">
                        <option value="">Select</option>
                        @if (ViewBag.AccountList != null)
                        {
                            foreach (var account in ViewBag.AccountList)
                            {
                                <option value="@account.AccountName">@account.AccountName</option>
                            }
                        }
                    </select>
                </div>


                <div class="col-md-2">
                    <label for="broker">Broker</label>
                    <select class="form-control" name="broker" id="broker">
                        <option value="">Select</option>
                        @if (ViewBag.BrokerList != null)
                        {
                            foreach (var broker in ViewBag.BrokerList)
                            {
                                <option value="@broker.BrokerName">@broker.BrokerName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="transactiontype">Transaction Type</label>
                    <select class="form-control" name="transactiontype" id="transactiontype">
                        <option value="">Select</option>
                        @if (ViewBag.TransactionList != null)
                        {
                            foreach (var tr in ViewBag.TransactionList)
                            {
                                <option value="@tr.Code">@tr.Name</option>
                            }
                        }
                    </select>
                </div>




                <div class="col-md-0">
                    <button style="margin-top:40%;" class="btn btn-primary" id="TradewiseMatchingLogReportSearch">Search</button>
                </div>
                <div class="">
                    <button class="btn btn-success float-right ml-2" id="TradewiseMatchingLogReportExport" style="margin-top: 29px;">
                        Export
                    </button>
                </div>

            </div>


        </div>

    </article>
    <br />

    <div>
        <div style="overflow:auto">
            <table class="table table-hover table-bordered" id="TradewiseMatchingLogReporttbl">
                <thead>
                    <tr style="background-color: #d3d3d3">
                        <th>s.no</th>
                        <th>Account</th>
                        <th>Broker</th>
                        <th>Transaction Type</th>
                        <th>CashTotalPrice</th>
                        <th>FutureTotalPrice</th>
                        <th>WeightedSpread</th>


                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="~/Assets/TradewiseMatchingReport.js"></script>
