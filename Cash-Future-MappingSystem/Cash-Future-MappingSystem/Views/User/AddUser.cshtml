@{
    ViewBag.Title = "Add User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="/User"><strong>Statistics</strong></a> </li>
        <li class="nav-item text-primary"> <a class="nav-link" href="/User/AddUser">Add User</a> </li>
    </ul>   
    <hr class="m-0">
</div>

<div class="container col-md-4 text-center shadow bg-white rounded mt-5 py-3"  style="height:370px;">
    <h5><strong class="text-secondary">Add New User</strong></h5>
    <br/>
    <div class="mt-2">

        <input class="form-control mb-2" id="Code" placeholder="Code">
        <input class="form-control mb-2" id="Name" placeholder="Name">
        <input class="form-control mb-2" id="Email" placeholder="Email">

        <select class="form-control mb-2" id="RoleId">
            <option value="">Select Role</option>
            @foreach (var r in ViewBag.roleData)
            {
                <option value="@r.ID">@r.Name</option>
            }
        </select>

        <input class="form-control mb-2" id="Password" type="password" placeholder="Password">
        
        <button class="btn btn-block text-white mt-2" style="background-color:#383095;"  id="saveUser">Create</button>
    </div>
</div>

<script src="~/Assets/UserMasterData.js"></script>
