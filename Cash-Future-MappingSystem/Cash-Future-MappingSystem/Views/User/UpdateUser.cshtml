@{
    ViewBag.Title = "Update User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var initialUser = JSON.parse('@Html.Raw(ViewBag.UserData)');
</script>


<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="/User"><strong>Statistics</strong></a> </li>
        <li class="nav-item text-primary"> <a class="nav-link" href="">Update User</a> </li>
    </ul>
    <hr class="m-0">
</div>


<div class="container col-md-4 shadow bg-white rounded mt-5 py-4">
    <h5 class="text-center mb-3"><strong>Update User</strong></h5>

    <input type="hidden" id="UserId" />

    <input class="form-control mb-2" id="Code" placeholder="User Code" />
    <input class="form-control mb-2" id="Name" placeholder="User Name" />
    <input class="form-control mb-2" id="Email" placeholder="Email" />

    <select class="form-control mb-2" id="RoleId">
        <option value="">Select Role</option>
        @foreach (var role in ViewBag.roleData)
        {
            <option value="@role.ID">@role.Name</option>
        }
    </select>

    <input class="form-control mb-3" id="Password" type="password" placeholder="New Password (optional)" />

    <button class="btn btn-block text-white" style="background-color:#383095;" id="saveUser">
        Update
    </button>
</div>

<script src="~/Assets/UserMasterData.js"></script>
